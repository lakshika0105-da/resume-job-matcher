    <script>
        // This stores the selected file
        let selectedFile = null;

        // Change pages (welcome, login, signup, dashboard)
        function showPage(pageId) {
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            document.getElementById(pageId).classList.add('active');
        }
        
        // Login button clicked
        function login(event) {
            event.preventDefault();
            showPage('dashboard');
        }
        
        // Signup button clicked
        function signup(event) {
            event.preventDefault();
            showPage('dashboard');
        }
        
        // Show different tabs in results
        function showTab(index) {
            const tabs = document.querySelectorAll('.tab');
            const contents = document.querySelectorAll('.tab-content');
            
            tabs.forEach(tab => tab.classList.remove('active'));
            contents.forEach(content => content.classList.remove('active'));
            
            tabs[index].classList.add('active');
            contents[index].classList.add('active');
        }

        // When user picks a file
        document.getElementById('fileInput').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                selectedFile = file;
                document.getElementById('fileName').textContent = file.name;
                document.getElementById('fileInfo').classList.remove('hidden');
            }
        });

        // MAIN FUNCTION - Analyze Resume
        async function analyzeResume() {
            const resultsDiv = document.getElementById('results');
            const jobRole = document.getElementById('jobRole').value;

            if (!selectedFile) {
                alert('Please select a resume file first!');
                return;
            }

            if (!jobRole) {
                alert('Please select a job role!');
                return;
            }

            resultsDiv.style.display = 'block';
            resultsDiv.innerHTML = `
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Analyzing your resume...</p>
                    <p style="color: #666; font-size: 14px;">Please wait, this may take a few seconds</p>
                </div>
            `;

            try {
                const formData = new FormData();
                formData.append('resume', selectedFile);
                formData.append('jobRole', jobRole);

                const response = await fetch('http://localhost:3000/analyze', {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    throw new Error('Server returned error: ' + response.status);
                }

                const result = await response.json();
                console.log('Result from backend:', result);
                
                displayResults(result);

            } catch (error) {
                console.error('Error:', error);
                resultsDiv.innerHTML = `
                    <div style="color: red; text-align: center; padding: 20px;">
                        <h3>‚ùå Connection Failed</h3>
                        <p>Could not connect to the server</p>
                        <p style="font-size: 14px; color: #666;">Error: ${error.message}</p>
                        <p style="margin-top: 15px;">Make sure your backend server is running!</p>
                        <p style="font-size: 14px; color: #666;">Run: <code>node backend/server.js</code></p>
                    </div>
                `;
            }
        }

        // Display the analysis results
        function displayResults(result) {
            const resultsDiv = document.getElementById('results');
            
            if (result.error) {
                resultsDiv.innerHTML = `
                    <div style="color: red; text-align: center; padding: 20px;">
                        <h3>Error</h3>
                        <p>${result.error}</p>
                    </div>
                `;
                return;
            }

            const matchScore = result.final_match_score || 0;
            const skillMatch = result.skill_match_percentage || 0;
            const mlScore = result.ml_similarity_score || 0;
            const presentSkills = result.present_skills || [];
            const missingSkills = result.missing_skills || [];
            const foundCount = result.skills_count ? result.skills_count.found : 0;
            const totalCount = result.skills_count ? result.skills_count.total : 0;

            resultsDiv.innerHTML = `
                <h3>üìä Analysis Complete!</h3>
                
                <div class="tabs">
                    <div class="tab active" onclick="showTab(0)">Overall Score</div>
                    <div class="tab" onclick="showTab(1)">Skills</div>
                    <div class="tab" onclick="showTab(2)">Details</div>
                </div>

                <div class="tab-content active">
                    <div style="text-align: center; padding: 30px;">
                        <h2 style="color: #11d4a4; font-size: 60px; margin: 10px 0;">${matchScore}%</h2>
                        <p style="font-size: 18px; color: #666;">Final Match Score</p>
                        <div class="progress-bar" style="max-width: 400px; margin: 20px auto;">
                            <div class="progress" style="width: ${matchScore}%;"></div>
                        </div>
                        <p style="margin-top: 20px;">
                            ${matchScore >= 70 ? '‚úÖ Great match! Your resume fits this job well.' : 
                              matchScore >= 50 ? '‚ö†Ô∏è Decent match, but you can improve it.' :
                              '‚ùå Low match. Consider adding more relevant skills.'}
                        </p>
                    </div>
                </div>

                <div class="tab-content">
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px; margin-top: 20px;">
                        <div>
                            <h4 style="margin-bottom: 15px;">‚úÖ Skills You Have (${foundCount}/${totalCount})</h4>
                            <div>
                                ${presentSkills.length > 0 ? 
                                  presentSkills.map(skill => `<span class="skill-tag">${skill}</span>`).join('') :
                                  '<p style="color: #666;">No skills found</p>'}
                            </div>
                        </div>
                        <div>
                            <h4 style="margin-bottom: 15px;">‚ùå Missing Skills (${missingSkills.length})</h4>
                            <div>
                                ${missingSkills.length > 0 ?
                                  missingSkills.map(skill => 
                                    `<span class="skill-tag" style="background-color: #ffebee; color: #d32f2f;">${skill}</span>`
                                  ).join('') :
                                  '<p style="color: #666;">All skills present!</p>'}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-content">
                    <h4 style="margin-bottom: 15px;">üìà Score Breakdown</h4>
                    <div style="padding: 15px; background-color: #f9f9f9; border-radius: 8px;">
                        <p><strong>Skill Match:</strong> ${skillMatch}% (${foundCount} out of ${totalCount} skills found)</p>
                        <div class="progress-bar">
                            <div class="progress" style="width: ${skillMatch}%;"></div>
                        </div>
                        
                        <p style="margin-top: 15px;"><strong>ML Similarity Score:</strong> ${mlScore}%</p>
                        <div class="progress-bar">
                            <div class="progress" style="width: ${mlScore}%;"></div>
                        </div>
                        
                        <p style="margin-top: 15px; font-size: 14px; color: #666;">
                            Final score is calculated as: (Skill Match √ó 60%) + (ML Score √ó 40%)
                        </p>
                    </div>
                    
                    <h4 style="margin-top: 25px; margin-bottom: 10px;">üí° Tips to Improve</h4>
                    <ul style="padding-left: 20px;">
                        ${missingSkills.length > 0 ? 
                          `<li>Add these missing skills to your resume: <strong>${missingSkills.join(', ')}</strong></li>` : ''}
                        <li>Use keywords from the job description throughout your resume</li>
                        <li>Add specific examples and achievements for each skill</li>
                        <li>Quantify your accomplishments with numbers and metrics</li>
                    </ul>
                </div>
            `;
        }
    </script>
</body>
