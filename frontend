                    <option value="Business Analyst">Business Analyst</option>
                </select>
            </div>
            
            <button class="btn btn-primary" style="width: 100%; margin-top: 10px;" onclick="analyzeResume()">
                Analyze Resume
            </button>
            
            <div id="results" class="results" style="display: none;"></div>
